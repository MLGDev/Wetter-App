
<h1>Willkommen bei DER Wetter App</h1>
<%= form_with url: root_path, method: :get do %>
  <p>
    <%= label_tag :city, "Stadt mit Ländercode eingeben (z.B: Berlin,de):" %><br>
    <%= text_field_tag :city, params[:city] %>
  </p>
  <p>
    <%= submit_tag "Senden", class: "btn" %>
  </p>
<% end %>
<% if @weather.present? %>
  <h2>Wetter in <%= @weather["name"] %></h2>
  <div class="wetter">
    <p>Temperatur: <%= @weather["main"]["temp"].to_f.round(1) %> °C</p>
    <p>Luftfeuchtigkeit: <%= @weather["main"]["humidity"] %> %</p>
    <p>Beschreibung: <%= @weather["weather"][0]["description"].capitalize %></p>
  </div>
<% end %>
